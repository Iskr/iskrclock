rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - каждый пользователь может читать и писать только свои данные
    match /users/{userId} {
      // Пользователь может читать и писать только свои данные
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Дополнительные правила валидации данных
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.keys().hasAll(['customStations', 'lastModified']);

      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.keys().hasAny(['customStations', 'selectedStation', 'language', 'lastModified']);
    }

    // Запретить доступ ко всем остальным коллекциям
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
